<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp">
	<ImageView
		android:id="@+id/icon_error"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:src="@drawable/error"
		android:layout_marginTop="4dp"
		app:layout_constraintTop_toTopOf="@id/label_title"
		app:layout_constraintStart_toStartOf="parent" />
	<TextView
		android:id="@+id/label_title"
		style="@style/TextAppearance.MaterialComponents.Headline5"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:textColor="@android:color/white"
		android:text="@string/message_crashreport_title"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toEndOf="@id/icon_error"
		app:layout_constraintEnd_toEndOf="parent" />
	<TextView
		android:id="@+id/label_subtitle"
		style="@style/TextAppearance.MaterialComponents.Subtitle2"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:textColor="@android:color/white"
		android:alpha="0.7"
		android:text="@string/message_crashreport_subtitle"
		app:layout_constraintTop_toBottomOf="@id/label_title"
		app:layout_constraintStart_toEndOf="@id/icon_error"
		app:layout_constraintEnd_toEndOf="parent" />
	<TextView
		android:id="@+id/label_stacktrace"
		android:layout_width="0px"
		android:layout_height="0px"
		android:layout_marginTop="24dp"
		android:layout_marginBottom="24dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/label_subtitle"
		app:layout_constraintBottom_toTopOf="@id/group_bottomcontrol"
		android:background="@drawable/background_roundedcrashreport"
		android:padding="8dp"
		android:textColor="@android:color/white"
		android:enabled="true"
		android:textIsSelectable="true"
		android:focusable="true"
		android:longClickable="true"
		android:typeface="monospace"
		android:scrollbars="vertical" />
	<com.google.android.flexbox.FlexboxLayout
		android:id="@+id/group_bottomcontrol"
		android:layout_width="0px"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:flexWrap="wrap"
		app:justifyContent="space_evenly">
		<com.google.android.material.button.MaterialButton
			android:id="@+id/button_copy"
			style="@style/Widget.MaterialComponents.Button.TextButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/action_copy"
			android:textColor="@android:color/white"
			app:layout_flexShrink="0"
			app:iconTint="@android:color/white"
			app:rippleColor="@android:color/white"
			app:icon="@drawable/copy" />
		<com.google.android.material.button.MaterialButton
			android:id="@+id/button_export"
			style="@style/Widget.MaterialComponents.Button.TextButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/action_savetofile"
			android:textColor="@android:color/white"
			app:layout_flexShrink="0"
			app:iconTint="@android:color/white"
			app:rippleColor="@android:color/white"
			app:icon="@drawable/save" />
		<com.google.android.material.button.MaterialButton
			android:id="@+id/button_restart"
			style="@style/Widget.MaterialComponents.Button.TextButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/action_relaunchapp"
			android:textColor="@android:color/white"
			app:layout_flexShrink="0"
			app:iconTint="@android:color/white"
			app:rippleColor="@android:color/white"
			app:icon="@drawable/restart" />
	</com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
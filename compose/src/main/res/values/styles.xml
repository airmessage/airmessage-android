<resources>
	<style name="ThemeBlack" parent="Theme.Material3.Dark.NoActionBar">
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
	</style>
	
	<style name="ActivityDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>
		<item name="android:colorBackground">@color/colorBackground</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="CrashReport" parent="Theme.MaterialComponents.NoActionBar">
		<item name="android:colorBackground">@color/colorError</item>
		<item name="android:statusBarColor">@color/colorError</item>
		<item name="android:navigationBarColor">@color/colorError</item>
	</style>
	
	<style name="OverscrollNeutralizer" parent="Theme.Material3.DayNight">
		<item name="android:colorPrimary">@android:color/darker_gray</item>
	</style>
	
	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/colorDivider</item>
	</style>

	<style name="ShapeAppearanceCircle" parent="">
		<!-- <item name="cornerFamily">rounded</item> -->
		<item name="cornerSize">50%</item>
	</style>
</resources>

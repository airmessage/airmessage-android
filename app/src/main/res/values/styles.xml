<resources>
	<style name="Theme.AirMessage.Compose" parent="Theme.Material3.Light.NoActionBar">
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:windowLightStatusBar">@bool/is_theme_light</item>
	</style>
	
	<style name="ThemeBlack" parent="@style/Theme.MaterialComponents.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
	</style>
	
	<style name="ActivityDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>
		<item name="android:colorBackground">@color/colorBackground</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="CrashReport" parent="Theme.MaterialComponents.NoActionBar">
		<item name="android:colorBackground">@color/colorError</item>
		<item name="android:statusBarColor">@color/colorError</item>
		<item name="android:navigationBarColor">@color/colorError</item>
	</style>
	
	<style name="OverscrollNeutralizer" parent="Theme.Material3.DayNight">
		<item name="android:colorPrimary">@android:color/darker_gray</item>
	</style>
	
	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/colorDivider</item>
	</style>
	
	<style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@color/colorBackgroundClean</item>
		<item name="android:colorBackground">@color/colorBackgroundClean</item>
		<item name="bottomSheetStyle">@style/BottomSheetStyle</item>
	</style>

	<style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
		<item name="shapeAppearanceOverlay">@style/ShapeAppearanceRoundedBottomSheet</item>
	</style>

	<style name="ShapeAppearanceRoundedBottomSheet" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSizeTopRight">8dp</item>
		<item name="cornerSizeTopLeft">8dp</item>
		<item name="cornerSizeBottomRight">0dp</item>
		<item name="cornerSizeBottomLeft">0dp</item>
	</style>

	<style name="ShapeAppearanceCircle" parent="">
		<!-- <item name="cornerFamily">rounded</item> -->
		<item name="cornerSize">50%</item>
	</style>
</resources>
